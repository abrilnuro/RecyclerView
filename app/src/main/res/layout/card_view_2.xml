<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_item2"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardElevation="20dp"
    android:contextClickable="false"
    app:cardBackgroundColor="@android:color/holo_blue_light">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_libro2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:src="@android:drawable/ic_menu_camera"
            android:scaleType="centerCrop"/>

        <TextView
            android:id="@+id/text_nombreLibro2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:fontFamily="serif-monospac"
            android:layout_below="@+id/image_libro2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/text_autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autor"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:layout_below="@+id/text_nombreLibro2"
            android:layout_centerHorizontal="true"
            android:fontFamily="serif-monospace"/>


    </RelativeLayout>

</android.support.v7.widget.CardView>