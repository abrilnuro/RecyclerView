<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardview_item"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/holo_blue_light"
    app:cardCornerRadius="15dp"
    android:layout_margin="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    app:cardElevation="20dp"
    android:contextClickable="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_libro"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@android:drawable/ic_menu_camera"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"/>

        <TextView
            android:id="@+id/text_nombreLibro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:fontFamily="casual"
            android:textSize="30sp"
            android:layout_alignTop="@+id/image_libro"
            android:layout_toRightOf="@+id/image_libro"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/text_autor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Autor"
            android:textSize="20sp"
            android:layout_below="@+id/text_nombreLibro"
            android:layout_alignLeft="@+id/text_nombreLibro"
            android:layout_alignStart="@+id/text_nombreLibro"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>


